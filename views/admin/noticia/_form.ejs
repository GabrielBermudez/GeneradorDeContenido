<div class="mb-3">
	<label for="label-denominacion" class="form-label">Titulo:</label>
	<input type="text" class="form-control" id="titulo" name="titulo" placeholder="Delitos Informaticos" value="<%=noticia?noticia.titulo:''%>">
	<label for="" id="labelTitulo"></label>
</div>
<div class="mb-3">
	<label for="label-resumen" class="form-label">Resumen:</label>
	<input type="text" class="form-control" name="resumen" id="resumen" placeholder="A determinar..." value="<%=noticia?noticia.titulo:''%>">
	<label for="" id="labelResumen"></label>
</div>
<div class="mb-3">
	<label for="label-imagen" class="form-label">Imagen:</label>
	<input type="file" class="form-control" name="imagen" id="imagen">
	<label for="" id="labelImagen"></label>
</div>
<div class="mb-3">
	<label for="label-publicada" class="form-label">Publicada:</label>
	<div class="form-check">
	  <input class="form-check-input" type="radio" name="publicada" id="Si" value="1">
	  <label class="form-check-label" for="flexRadioDefault1">Si</label>
	</div>
	<div class="form-check">
  		<input class="form-check-input" type="radio" name="publicada" id="No" value="0">
  		<label class="form-check-label" for="flexRadioDefault2">No</label>
	</div>
	<label for="" id="labelPublicada"></label>
</div>
<div class="mb-3">
	<label for="label-fecha" class="form-label">Fecha de Publicaci√≥n:</label>
	<input type="date" class="form-control" name="fecha" id="fecha">
	<label for="" id="labelFecha"></label>
</div>
<div class="mb-3">
	<label for="exampleDataList" class="form-label">Empresa:</label>
	<select name="empresa" id="">
		<%empresas.forEach((empresa) => {%>
			<option value="<%=empresa.id_empresa%>"><%=empresa.denominacion%></option>
		<%})%>
	</select>
